<div class='absolute left-[-18px] top-[110px] h-full hidden' id='page-share-icons'>
  <div class='flex sticky top-[100px] flex-col gap-1.5'>
    {% set pageUrl = ["https://roadmap.sh", permalink] | join %}
    {% set twitterUrl = ["https://twitter.com/intent/tweet?text=", description, '&url=', pageUrl] | join %}
    {% set fbUrl = ["https://www.facebook.com/sharer/sharer.php?quote=", description, '&u=', pageUrl] | join %}
    {% set hnUrl = ["https://news.ycombinator.com/submitlink?t=", description, '&u=', pageUrl] | join %}
    {% set redditUrl = ["https://www.reddit.com/submit?title=", description, '&url=', pageUrl] | join %}

    <a href='{{ twitterUrl }}' target='_blank' class='text-gray-500 hover:text-gray-700'>{% include "icons/twitter.njk" %}</a>
    <a href='{{ fbUrl }}' target='_blank' class='text-gray-500 hover:text-gray-700'>{% include "icons/facebook.njk" %}</a>
    <a href='{{ hnUrl }}' target='_blank' class='text-gray-500 hover:text-gray-700'>{% include "icons/hackernews.njk" %}</a>
    <a href='{{ redditUrl }}' target='_blank' class='text-gray-500 hover:text-gray-700'>{% include "icons/reddit.njk" %}</a>
  </div>
</div>

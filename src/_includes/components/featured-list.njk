<div class='container'>
  {% if heading %}
    <h1 class='text-2xl sm:text-3xl font-bold block'>{{ heading }}</h1>
  {% endif %}

  <div class='mt-3 sm:my-5'>
    {% for listItem in listItems %}
      <a
        class='block no-underline py-2 group text-md items-center text-gray-600 hover:text-blue-600 flex justify-between {{ 'border-b' if loop.last === false }}'
        href={{ listItem.data.page.url }}>
        <span class='group-hover:translate-x-2 transition-transform'>
          {{ listItem.data.title }}

          {% if listItem.data.isNew === true %}
            <span class='bg-green-300 text-green-900 text-xs font-medium px-1.5 py-0.5 rounded-sm uppercase ml-1.5'>
              New&nbsp;<span class='hidden sm:inline'>&middot; {{ listItem.data.date.toLocaleString('default', { month: 'long' }) }}</span>
            </span>
          {% endif %}
        </span>
        <span class='capitalize text-gray-400 text-xs hidden sm:block'>
          {% if listItem.data.duration %}
            {{ listItem.data.duration }}
          {% elseif listItem.data.type %}
            {{ listItem.data.type }}
          {% endif %}
        </span>

        <span class='text-gray-400 text-xs block sm:hidden'>
          &raquo;
        </span>
      </a>
    {% endfor %}
  </div>

  {% if buttonText %}
    <a href='{{ buttonLink }}' class='hidden sm:inline transition-colors py-2 px-3 text-xs font-medium rounded-full bg-gradient-to-r from-slate-600 to-black hover:from-blue-600 hover:to-blue-800 text-white'>
      {{ buttonText }} &rarr;
    </a>
    <div class='block sm:hidden mt-3'>
      <a href='{{ buttonLink }}' class='text-sm font-regular block p-2 border border-black text-black rounded-md text-center hover:bg-black hover:text-gray-50'>
        {{ buttonText }} &nbsp;&rarr;
      </a>
    </div>
  {% endif %}
</div>

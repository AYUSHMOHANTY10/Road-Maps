<!doctype html>
<html lang="en">
<head>
  <title>{{ title }}</title>
  <link rel="stylesheet" type="text/css" href="/styles/main.css" />


  {% block headerAssets %}
    {% set css %}
      {% include "assets/app.css" %}
    {% endset %}
    <style>{{ css | cssmin | safe }}</style>
  {% endblock %}

</head>
<body>

{% include "../components/navigation.njk" %}
<main class="p-12">
  {{ content | safe }}
</main>

<!-- capture the JS content as a Nunjucks variable -->
{% set js %}
  {% include "scripts/navigation.js" %}
{% endset %}

<script>
  {{ js | jsmin | safe }}
</script>
</body>
</html>
